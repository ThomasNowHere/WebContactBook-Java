<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
    <constant name="struts.devMode" value="true"/>
    
    <package name="userDefault" extends="struts-default">
       <result-types>
           <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult"/>
       
       </result-types>
       <action name="loginUser" class="myPackage.Action.UserAction" method="validateUser">
            <result name="success" type="tiles">home</result>
            <result name="login">/main/login.jsp</result>
       </action>
       <action name="registerUser" class="myPackage.Action.UserAction" method="registerUser">
            <result name="success">/main/login.jsp</result>
           <result name="login">/main/register.jsp</result>
       </action>
        <action name="*Menu" class="myPackage.Action.MenuAction" method="{1}Menu">
        <result name="home" type="tiles">home</result>
        <result name="add"  type="tiles">add</result>
       </action>
       <action name="logout" class="myPackage.Action.UserAction" method="logoutUser">
         <result name="login" type="redirect">/main/login.jsp</result>
       </action>
       <action name="viewDetails" class="myPackage.Action.AddressAction" method="listAddress">
            <result name="view" type="tiles">view</result>
       </action>
       <action name="*Address" class="myPackage.Action.AddressAction" method="{1}Address">
         <result name="add" type="redirect">viewDetails</result>
          <result name="modify" type="tiles">modify</result>
          <result name="update" type="redirect">viewDetails</result>
          <result name="delete" type="tiles">delete</result>
          <result name="again" type="tiles">add</result>
          <result name="again1" type="tiles">modify</result>
       </action>
       <action name="changePassword" class="myPackage.Action.UserAction" method="changePassword">
            <result name="success" type="tiles">change</result>
       </action>
    </package>


</struts>